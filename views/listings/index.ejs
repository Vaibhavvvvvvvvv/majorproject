<% layout("/layouts/boilerplates") %>
<head>
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css"/>
    <style>
           #filters {
            display: flex;
            flex-wrap: wrap;
            max-width: 80%;
            margin: 0 auto;
        }
        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
        }
        .filter:hover {
            cursor: pointer;
            opacity: 1;
        }
        .slick-slide {
            outline: none;
        }
        .filters-right {
            justify-content: flex-end;
        }
 
    </style>
</head>
<body>    
    <div id="filters" class="carousel">
        <div class="filter">
            <i class="fas fa-snowflake"></i> 
            <p>Arctic</p>
        </div>
        <div class="filter">
            <i class="fas fa-eye"></i> 
            <p>Amazing views</p>
        </div>
        <div class="filter">
            <i class="fas fa-tractor"></i> 
            <p>Farms</p>
        </div>
        <div class="filter">
            <i class="fas fa-bolt"></i> 
            <p>Trending</p>
        </div>
        <div class="filter">
            <i class="fas fa-campground"></i> 
            <p>Camping</p>
        </div>
        <div class="filter">
            <i class="fas fa-home"></i> 
            <p>Cabins</p>
        </div>
        <div class="filter">
            <i class="fas fa-water"></i> 
            <p>Lakefront</p>
        </div>
        <div class="filter">
            <i class="fas fa-tree"></i> 
            <p>Treehouse</p>
        </div>
        <div class="filter">
            <i class="fas fa-umbrella-beach"></i> 
            <p>Beachfront</p>
        </div>
        <div class="filter">
            <i class="fas fa-gem"></i> 
            <p>Luxe</p>
        </div>
        <div class="filter">
            <i class="fas fa-chess-rook"></i> 
            <p>Castles</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain-sun"></i>
            <p>Islands</p>
        </div>
        <div class="filter">
            <i class="fas fa-landmark"></i> 
            <p>Mansions</p>
        </div>
        <div class="filter">
            <i class="fas fa-mountain"></i> 
            <p>Off-the-grid</p>
        </div>
        <div class="filter">
            <i class="fas fa-home"></i> 
            <p>Tiny homes</p>
        </div>
    </div>
    

    <div class="container mt-4">                    
        <!-- Cards for listing content -->
        <div class="row ">
            <% if (allList && allList.length > 0) { %>
                <% for (let listing of allList) { %>
                    <div class="col-md-4 mb-4">
                        <a href="/listings/<%= listing._id %>" style="text-decoration: none;">
                            <div class="card" style="border: none !important; margin-bottom: 2rem;">
                                <img src="<%= listing.image.url %>" class="card-img-top" style="border-radius: 1rem; width: 100% !important; object-fit: cover !important; height: 20rem; position: relative;">
                                <div class="card-img-overlay d-flex align-items-center justify-content-center" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(255, 255, 255, 0); transition: background-color 0.3s;">
                                    <i class="fas fa-search" style="font-size: 3rem; opacity: 0; transition: opacity 0.3s;"></i>
                                </div>
                                <div class="card-body" style="padding: 0;">
                                    <h5 class="card-title font-weight-bold"><%= listing.title %></h5>
                                    <p class="card-text"><%= listing.price %> &#8377;</p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% } %>
            <% } else { %>
                <div class="col">
                    <p>No listings available</p>
                </div>
            <% } %>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        .card:hover {
            background-color: #f0f0f0; /* Gray color */
        }
    </style>
    
</body>
<script>
    $(document).ready(function(){
            $('.carousel').slick({
                infinite: true,
                slidesToShow: 4,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 2000,
                dots: true,
                responsive: [
                    {
                        breakpoint: 1024,
                        settings: {
                            slidesToShow: 3,
                            slidesToScroll: 1,
                            infinite: true,
                        }
                    },
                    {
                        breakpoint: 600,
                        settings: {
                            slidesToShow: 2,
                            slidesToScroll: 1
                        }
                    },
                    {
                        breakpoint: 480,
                        settings: {
                            slidesToShow: 1,
                            slidesToScroll: 1
                        }
                    }
                ]
            });
        });
</script>