<% layout("/layouts/boilerplates") %>
<body>
    <div class="container mt-4">
        <h1>Create New Listing</h1>
        <!-- Form to create a new listing -->
        <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <!-- Title -->
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text"  class="form-control" id="title" name="listing[title]" required placeholder="Enter the listing title">
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please Enter title
                  </div>
            </div>
           
            <!-- Description -->
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" name="listing[description]"required rows="3" placeholder="Enter a description"></textarea>
                <div class="valid-feedback">
                    great description!
                  </div>
                  <div class="invalid-feedback">
                    Please enter shorter description
                  </div>
            </div>

            <!-- Image URL -->
            <div class="form-group">
                <label for="image">Upload image</label>
                <input type="file" class="form-control" id="image" name="listing[image]" required placeholder="Enter an image URL">
            </div>

            <!-- Price -->
            <div class="form-group">
                <label for="price">Price (INR)</label>
                <input type="number" class="form-control" id="price" name="listing[price]" required placeholder="Enter the price in INR">
                <div class="valid-feedback">
                    good price
                  </div>
                  <div class="invalid-feedback">
                    Please enter valid price!
                  </div>
            </div>

            <!-- Location -->
            <div class="form-group">
                <label for="location">Location</label>
                <input type="text" class="form-control" id="location" name="listing[location]" required placeholder="jaipur,udaipur">
                  <div class="invalid-feedback">
                    Please enter location
                  </div>
            </div>

            <!-- Country -->
            <div class="form-group">
                <label for="country">Country</label>
                <input type="text" class="form-control" id="country" name="listing[country]" required placeholder="Enter the country">
                  <div class="invalid-feedback">
                    Please enter coutry name!
                  </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Create Listing</button>
        </form>
    </div>

    <!-- Include Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
